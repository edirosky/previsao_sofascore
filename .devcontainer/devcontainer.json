{
    "name": "Previsao SofaScore",
    "image": "mcr.microsoft.com/devcontainers/python:3.11",
    "features": {
        "ghcr.io/devcontainers/features/python:1": {}
    },
    "postCreateCommand": "pip install -r /workspaces/previsao_sofascore/frontend/requirements.txt",
    "forwardPorts": [8501],
    "portsAttributes": {
        "8501": {
            "label": "Streamlit App",
            "onAutoForward": "openPreview"
        }
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-toolsai.jupyter",
                "formulahendry.code-runner"
            ]
        }
    }
}
